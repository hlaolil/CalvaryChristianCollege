<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: title }) %>
  <link rel="stylesheet" href="/css/style.css">
  <body>
    <%- include('partials/header') %>
    <main>
      <!-- Hero Section -->
      <section class="hero" style="background-image: url('/images/hero.jpg');" loading="lazy">
        <div class="hero-overlay">
          <div class="hero-content">
            <h1>Welcome to Calvary Christian College</h1>
            <p>Equipping believers for ministry through the Word of God.</p>
            <a href="/about" class="btn-primary">Learn More</a>
          </div>
        </div>
      </section>

      <!-- First Grid Section -->
      <section class="grid-section">
        <div class="grid-item">
          <img src="/images/vision.jpg" alt="Vision">
          <h3>Our Vision</h3>
          <p>Raising Christ-centered, Spirit-empowered servant leaders.</p>
        </div>
        <div class="grid-item">
          <img src="/images/mission.jpg" alt="Mission">
          <h3>Our Mission</h3>
          <p>Training and equipping students for ministry and leadership.</p>
        </div>
        <div class="grid-item">
          <img src="/images/values.jpg" alt="Core Values">
          <h3>Core Values</h3>
          <p>Christ-Centered • Integrity • Servanthood • Excellence • Impact</p>
        </div>
      </section>

      <!-- Call-to-Action Section -->
      <% if (!user) { %>
        <section class="cta">
          <p>Ready to join us? Start your journey today!</p>
          <a href="/auth/login" class="btn-primary">Login And Apply Now</a>
        </section>
      <% } else { %>
        <section class="cta">
          <% const role = (user.role || '').toString().toLowerCase().trim(); %>

          <% if (role === 'applicant') { %>
            <p>Welcome, <%= user.name %>! Ready to apply?</p>
            <a href="/apply" class="btn-primary">Fill Application Form</a>

          <% } else if (role === 'alumni') { %>
            <p>Welcome, <%= user.name %>! Join our alumni community!</p>
            <a href="/alumni" class="btn-primary">Join Alumni Community</a>

          <% } else if (role === 'student') { %>
            <p>Welcome, <%= user.name %>! Access your student portal!</p>
            <a href="/student-portal" class="btn-primary">Go to Student Portal</a>

          <% } else if (role === 'admin') { %>
            <p>Welcome, <%= user.name %>! Manage applications, alumni, or student portal!</p>
            <a href="/apply" class="btn-primary">Manage Applications</a>
            <a href="/alumni" class="btn-primary">Manage Alumni</a>
            <a href="/student-portal" class="btn-primary">Manage Student Portal</a>

          <% } else { %>
            <p>Welcome, <%= user.name %>!</p>
            <p><strong>Role not recognized:</strong> "<%= user.role || 'none' %>"</p>
            <p>Please contact support.</p>
          <% } %>
        </section>
      <% } %>

      <!-- Second Grid Section -->
      <section class="grid-section">
        <div class="grid-item">
          <img src="/images/discipleship.jpg" alt="Discipleship">
          <h3>Discipleship</h3>
          <p>Grow deeper in your faith and spiritual walk with Christ.</p>
        </div>
        <div class="grid-item">
          <img src="/images/ministry.jpg" alt="Ministry Training">
          <h3>Ministry Training</h3>
          <p>Get equipped to serve in your calling with excellence.</p>
        </div>
        <div class="grid-item">
          <img src="/images/community.jpg" alt="Community Impact">
          <h3>Community Impact</h3>
          <p>Transforming communities through the power of the Gospel.</p>
        </div>
      </section>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
