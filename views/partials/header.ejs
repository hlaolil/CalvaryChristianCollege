<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Calvary Christian College</title>
  <style>
    :root {
      --primary: #1976d2;
      --dark: #0d47a1;
      --light: #f5f5f5;
      --gray: #555;
      --border: #ddd;
      --radius: 8px;
    }

    * { box-sizing: border-box; margin:0; padding:0; }
    body { font-family: system-ui, -apple-system, Arial, sans-serif; line-height: 1.6; }

    /* ==================== HEADER ==================== */
    .header {
      background: white;
      border-bottom: 1px solid var(--border);
      padding: 0.75rem 1rem;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 2px 6px rgba(0,0,0,.08);
    }

    .header .container {
      max-width: 1200px;
      margin: auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 1rem;
    }

    /* Logo */
    .logo-container {
      flex-shrink: 0;
    }
    .logo {
      height: 50px;
      width: auto;
      border-radius: var(--radius);
      object-fit: contain;
    }

    /* Nav Toggle (Mobile) */
    .nav-toggle {
      display: none;
      background: none;
      border: none;
      font-size: 1.8rem;
      cursor: pointer;
      color: var(--primary);
    }

    /* Navigation */
    nav ul {
      list-style: none;
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
      align-items: center;
    }

    nav a {
      color: var(--gray);
      text-decoration: none;
      font-weight: 500;
      padding: .4rem .6rem;
      border-radius: 6px;
      transition: all .2s;
    }

    nav a:hover,
    nav a.active {
      background: rgba(25,118,210,.1);
      color: var(--primary);
    }

    /* User Nav */
    .user-nav {
      display: flex;
      align-items: center;
      gap: 1rem;
      font-size: .95rem;
      flex-wrap: wrap;
    }

    .user-nav span {
      color: var(--gray);
      font-weight: 500;
    }

    .user-nav a {
      background: var(--primary);
      color: white;
      padding: .5rem 1rem;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      font-size: .9rem;
      transition: background .2s;
    }

    .user-nav a:hover {
      background: var(--dark);
    }

    /* ==================== MOBILE MENU ==================== */
    @media (max-width: 768px) {
      .nav-toggle {
        display: block;
      }

      nav {
        order: 3;
        width: 100%;
        flex-basis: 100%;
      }

      nav ul {
        flex-direction: column;
        background: white;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 1rem;
        max-height: 0;
        overflow: hidden;
        transition: max-height .3s ease, padding .3s ease;
        box-shadow: 0 4px 12px rgba(0,0,0,.1);
      }

      nav ul.open {
        max-height: 500px;
        padding: 1rem;
      }

      nav a {
        display: block;
        width: 100%;
        text-align: left;
        padding: .75rem 0;
        border-bottom: 1px solid #eee;
      }

      nav a:last-child {
        border-bottom: none;
      }

      .user-nav {
        order: 2;
        font-size: .9rem;
      }
    }

    /* Small phones */
    @media (max-width: 480px) {
      .logo { height: 40px; }
      .header { padding: .5rem; }
      .user-nav span { display: none; }
      .user-nav a { padding: .5rem .8rem; font-size: .85rem; }
    }
  </style>
</head>
<body>

<header class="header">
  <div class="container">
    <!-- Logo -->
    <div class="logo-container">
      <img src="/images/logo.jpg" alt="Calvary Christian College Logo" class="logo">
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="nav-toggle" aria-label="Toggle navigation" onclick="toggleNav()">
      Menu
    </button>

    <!-- Navigation -->
    <nav>
      <ul id="nav-menu">
        <li><a href="/" class="<%= path === '/' ? 'active' : '' %>">Home</a></li>
        <li><a href="/about" class="<%= path === '/about' ? 'active' : '' %>">About Us</a></li>
        <li><a href="/academics" class="<%= path === '/academics' ? 'active' : '' %>">Academics</a></li>
        <li><a href="/contact" class="<%= path === '/contact' ? 'active' : '' %>">Contact Us</a></li>

        <% if (user) { %>
          <% if (user.role === 'applicant') { %>
            <li><a href="/apply" class="<%= path === '/apply' ? 'active' : '' %>">Apply</a></li>
          <% } else if (user.role === 'alumni') { %>
            <li><a href="/alumni" class="<%= path === '/alumni' ? 'active' : '' %>">Join Alumni Community</a></li>
          <% } else if (user.role === 'student') { %>
            <li><a href="/student-portal" class="<%= path === '/student-portal' ? 'active' : '' %>">Student Portal</a></li>
          <% } else if (user.role === 'admin') { %>
            <li><a href="/apply" class="<%= path === '/apply' ? 'active' : '' %>">Apply</a></li>
            <li><a href="/alumni" class="<%= path === '/alumni' ? 'active' : '' %>">Join Alumni Community</a></li>
            <li><a href="/student-portal" class="<%= path === '/student-portal' ? 'active' : '' %>">Student Portal</a></li>
          <% } %>
        <% } %>
      </ul>
    </nav>

    <!-- User Section -->
    <% if (user) { %>
      <div class="user-nav">
        <span>Welcome, <%= user.name %>!</span>
        <a href="/auth/logout">Logout</a>
      </div>
    <% } %>
  </div>
</header>

<script>
  function toggleNav() {
    const menu = document.getElementById('nav-menu');
    menu.classList.toggle('open');
  }

  // Close menu when clicking a link (mobile)
  document.querySelectorAll('nav a').forEach(link => {
    link.addEventListener('click', () => {
      const menu = document.getElementById('nav-menu');
      if (menu.classList.contains('open')) {
        menu.classList.remove('open');
      }
    });
  });

  // Optional: Close menu when clicking outside
  document.addEventListener('click', (e) => {
    const header = document.querySelector('.header');
    const menu = document.getElementById('nav-menu');
    if (!header.contains(e.target) && menu.classList.contains('open')) {
      menu.classList.remove('open');
    }
  });
</script>

</body>
</html>
