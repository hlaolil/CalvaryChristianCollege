<%- include('../layout', { body: `
  <div class="academics-container">
    <h2>Add Course</h2>
    <form action="/academics/add" method="POST" class="academics-form">
      <input type="text" name="title" placeholder="Course Title" required>
      <textarea name="description" placeholder="Course Description"></textarea>
      <input type="text" name="duration" placeholder="Duration (e.g., 1 year)">
      <button type="submit">Save</button>
    </form>
  </div>
` }) %>
